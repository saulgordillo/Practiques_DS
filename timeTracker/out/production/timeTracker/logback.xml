<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder> <pattern>
            %d{HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
        </pattern> </encoder>
    </appender>
   <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
   <logger name="visitor.Visitor.SearchByTagVisitor" level="debug"/>
    <logger name="core.Activity" level="debug"/>
    <logger name="core.Interval" level="debug"/>
    <logger name="core.Project" level="debug"/>
    <logger name="core.Task" level="debug"/>
</configuration>